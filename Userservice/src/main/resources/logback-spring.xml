<configuration>

    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>http://localhost:8088</url> <!-- Splunk HEC URL -->
        <token>YOUR-HEC-TOKEN</token>    <!-- Replace with your HEC token -->
        <index>main</index>              <!-- Index created in Splunk -->
        <sourcetype>userservice-logs</sourcetype>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <root level="INFO">
        <appender-ref ref="SPLUNK"/>
    </root>

</configuration>
